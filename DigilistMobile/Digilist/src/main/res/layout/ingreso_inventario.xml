<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".HiScreen">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:background="#f5f5f5">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/relativeLayout2">

                <ProgressBar
                    style="?android:attr/progressBarStyleLarge"
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:id="@+id/lyVentas"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/txtTitulo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="22dp"
                        android:text="Ingresar Inventario"
                        android:textColor="#CB2F17"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txtProducto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="Producto"
                        android:textColor="#9a9a9a"
                        android:textIsSelectable="false"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal">

                        <AutoCompleteTextView
                            android:id="@+id/acProductos"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:background="@drawable/edittext_rounded_corners"
                            android:completionThreshold="1"
                            android:textColor="#565656"
                            android:layout_toLeftOf="@+id/btnInfo" />

                        <Button
                            android:id="@+id/btnInfo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentRight="true"
                            android:layout_alignWithParentIfMissing="false"
                            android:background="@drawable/icon_marcador" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo"
                            android:textColor="#9a9a9a"
                            android:textIsSelectable="false"
                            android:textSize="18sp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true" />

                        <TextView
                            android:id="@+id/lvlTipo"
                            android:layout_width="125dp"
                            android:layout_height="30dp"
                            android:editable="false"
                            android:textColor="#565656"
                            android:layout_below="@+id/textView"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/lvlTamano"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:editable="false"
                            android:textColor="#565656"
                            android:layout_below="@+id/textView"
                            android:layout_toRightOf="@+id/lvlTipo"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txtTamano"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#9a9a9a"
                            android:textIsSelectable="false"
                            android:textSize="18sp"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/lvlTipo"
                            android:text="TamaÃ±o" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Material"
                        android:textColor="#9a9a9a"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/lvlMaterial"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:editable="false"
                        android:textColor="#565656"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtCantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Cantidad"
                        android:textColor="#9a9a9a"
                        android:textIsSelectable="false"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp" />

                    <EditText
                        android:id="@+id/edtcantidad"
                        android:layout_width="96dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/txtCantidad"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_rounded_corners"
                        android:inputType="number"
                        android:textColor="#0C8FD4"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="26dp"
                        android:paddingBottom="15dp">

                        <Button
                            android:id="@+id/btnAgregar"
                            android:layout_width="95dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="right|center_vertical"
                            android:background="@drawable/red_button2"
                            android:drawablePadding="3dp"
                            android:text="Agregar"
                            android:textColor="#FFF"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/btnLimpiar"
                            android:layout_width="95dp"
                            android:layout_height="40dp"
                            android:layout_alignBottom="@+id/btnAgregar"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/gray_button"
                            android:drawablePadding="3dp"
                            android:text="Limpiar"
                            android:textColor="#FFF"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/txto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/btnLimpiar"
                            android:layout_toRightOf="@+id/btnAgregar"
                            android:gravity="center_horizontal"
                            android:text="Ã³"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#9a9a9a" />


                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>


