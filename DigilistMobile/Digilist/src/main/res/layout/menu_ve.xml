<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/white_button_round">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/imageView5"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_action_basket" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/Ventas"
                    android:id="@+id/textView7"
                    android:layout_below="@+id/imageView5"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ff9a9a9a"
                    android:textSize="25sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:background="@drawable/white_button_round"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/rl"
                android:layout_marginLeft="27dp">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/imageView6"
                    android:src="@drawable/ic_action_barcode_1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/Productos"
                    android:id="@+id/textView8"
                    android:textColor="#ff9a9a9a"
                    android:textSize="25sp"
                    android:layout_below="@+id/imageView6"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:background="@drawable/white_button_round"
                android:layout_below="@+id/rl"
                android:layout_toLeftOf="@+id/rl2"
                android:layout_marginTop="27dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/Cliente"
                    android:id="@+id/textView10"
                    android:textColor="#ff9a9a9a"
                    android:textSize="25sp"
                    android:layout_below="@+id/imageView9"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/imageView9"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_action_users" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>