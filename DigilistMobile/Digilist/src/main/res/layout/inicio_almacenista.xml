<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >


            </android.support.v4.view.ViewPager>
        </LinearLayout>


    </FrameLayout>


    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="252dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:background="#E2E2E2"
        android:choiceMode="multipleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:showDividers="beginning|middle">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="1dp"
            android:background="#fff5f5f5">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="1dp"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/txtNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/textView3"
                        android:layout_toRightOf="@+id/frameLayout3"
                        android:gravity="center_vertical|left"
                        android:text="Asesor\nfalabella Barranquilla"
                        android:textColor="#9a9a9a"
                        android:textSize="11dp" />

                    <RelativeLayout
                        android:id="@+id/frameLayout3"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/user_image_dafault" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/textView3"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical|left"
                        android:paddingRight="5dp"
                        android:src="@drawable/marcador_up"
                        android:textColor="#636363"
                        android:textSize="15sp" />
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#E2E2E2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="1dp">

                            <RelativeLayout
                                android:id="@+id/rlat"
                                android:layout_width="124dp"
                                android:layout_height="124dp"
                                android:background="@drawable/white_button">

                                <ImageView
                                    android:id="@+id/imgVenta"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:src="@drawable/reportar" />

                                <TextView
                                    android:id="@+id/txtVentas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imgVenta"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_horizontal"
                                    android:text="Reportar"
                                    android:textColor="#9a9a9a"
                                    android:textSize="15sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlat2"
                                android:layout_width="124dp"
                                android:layout_height="124dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/white_button">

                                <ImageView
                                    android:id="@+id/imgHistorico"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:src="@drawable/ventas_por_enviar" />

                                <TextView
                                    android:id="@+id/txtHistorico"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imgHistorico"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_horizontal"
                                    android:text="V. sin Enviar"
                                    android:textColor="#9a9a9a"
                                    android:textSize="15sp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="2dp">

                            <RelativeLayout
                                android:id="@+id/rlat3"
                                android:layout_width="124dp"
                                android:layout_height="124dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/white_button">

                                <TextView
                                    android:id="@+id/txtReportes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imgReportes"
                                    android:layout_centerHorizontal="true"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_horizontal"
                                    android:text="V. Enviadas"
                                    android:textColor="#9a9a9a"
                                    android:textSize="15sp" />

                                <ImageView
                                    android:id="@+id/imgReportes"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:src="@drawable/ventas_enviadas" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlat4"
                                android:layout_width="124dp"
                                android:layout_height="124dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/white_button">

                                <ImageView
                                    android:id="@+id/imgGraficas"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:src="@drawable/graficas" />

                                <TextView
                                    android:id="@+id/txtGraficas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imgGraficas"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_horizontal"
                                    android:text="Gráficas"
                                    android:textColor="#9a9a9a"
                                    android:textSize="15sp" />
                            </RelativeLayout>

                        </RelativeLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/button"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round_button" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="#E2E2E2"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:background="#F5F5F5">

                        <TextView
                            android:id="@+id/txtVentasP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/frameLayout2"
                            android:background="#F5F5F5"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="10dp"
                            android:text="Ventas Pendientes"
                            android:textColor="#9a9a9a"
                            android:textSize="15sp" />

                        <FrameLayout
                            android:id="@+id/frameLayout2"
                            android:layout_width="40dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:background="#f5f5f5">

                            <Button
                                android:id="@+id/txtCantVentas"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:background="@drawable/round_button"
                                android:clickable="false"
                                android:enabled="true"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:text="5"
                                android:textSize="16dp" />
                        </FrameLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="#E2E2E2"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rltCuota"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:background="#F5F5F5">

                        <TextView
                            android:id="@+id/txtCuotaCum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/frameLayout"
                            android:background="#F5F5F5"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="10dp"
                            android:text="Cuota Cumplida"
                            android:textColor="#9a9a9a"
                            android:textSize="15sp" />

                        <FrameLayout
                            android:id="@+id/frameLayout"
                            android:layout_width="40dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:background="#f5f5f5">

                            <Button
                                android:id="@+id/txtCantVentasEnv"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:background="@drawable/round_button"
                                android:clickable="false"
                                android:enabled="true"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:text="42%"
                                android:textSize="11dp" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/txtMes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/txtCuotaCum"
                            android:background="#F5F5F5"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="6dp"
                            android:text="Julio"
                            android:textColor="#636363"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
