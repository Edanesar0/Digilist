<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#aeaeae" />
            <stroke
                android:width="0dp"
                android:color="#aeaeae" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fff"
                android:endColor="#fff"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#fff" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>

</selector>