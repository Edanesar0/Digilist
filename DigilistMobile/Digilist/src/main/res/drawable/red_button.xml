<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffab2b17" />
            <stroke android:width="1dp" android:color="#ffab2b17" />
            <corners android:radius="3dp" />
            <padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#CB2F17" android:endColor="#CB2F17" android:angle="270" />
            <stroke android:width="1dp" android:color="#CB2F17" />
            <corners android:radius="4dp" />
            <padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="7dp" />
        </shape>
    </item>
</selector>